root = true

[*.*]
indent_style             = tab
tab_width                = 4
trim_trailing_whitespace = true
insert_final_newline     = true
max_line_length          = off
guidelines               = 80

[*.js]
end_of_line              = lf

[*.{csproj,json,md,tf,yaml,yml}]
indent_style             = space
tab_width                = 2
